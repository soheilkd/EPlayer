<UserControl x:Class="EPlayer.Controls.Media.MediaButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EPlayer.Controls">
	<Grid x:Name="MediaControlGrid" Height="50" Margin="5">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="50" />
			<ColumnDefinition Width="50"/>
			<ColumnDefinition Width="50"/>
		</Grid.ColumnDefinitions>
		<local:IconButton x:Name="PreviousButton" Grid.Column="0" Margin="2" Icon="Previous" Click="PreviousButton_Click"/>
		<local:IconButton x:Name="PlayPauseButton" Grid.Column="1" Margin="-8" Height="40" Width="40" Icon="Play" Click="PlayPauseButton_Click"/>
		<local:IconButton x:Name="NextButton" Grid.Column="2" Margin="2" Icon="Next" Click="NextButton_Click"/>
	</Grid>
</UserControl>
