<controls1:AdonisWindow
	xmlns:controls1="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
				  x:Class="EPlayer.Windows.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Loaded="Window_Loaded"
		xmlns:eplayer="clr-namespace:EPlayer" xmlns:controls="clr-namespace:EPlayer.Controls" xmlns:views="clr-namespace:EPlayer.Views"
				  Title="MainWindow">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Image x:Name="BackgroundImage" Grid.RowSpan="2" Stretch="Fill" >
			<Image.Effect>
				<BlurEffect Radius="100" KernelType="Gaussian"/>
			</Image.Effect>
		</Image>
		<TabControl x:Name="TabControl" Background="Transparent" BorderThickness="0" SelectionChanged="TabControl_SelectionChanged">
			<TabItem Header="Now Playing">
				<views:NowPlayingView x:Name="NowPlayingView"/>
			</TabItem>
			<TabItem Header="Songs">
				<views:SongsView/>
			</TabItem>
			<TabItem Header="Artists">
				<views:ArtistsView/>
			</TabItem>
			<TabItem Header="Albums">
				<views:AlbumsView/>
			</TabItem>
		</TabControl>
		<controls:MediaControlBar x:Name="ControlBar" Grid.Row="1" />
	</Grid>
</controls1:AdonisWindow>