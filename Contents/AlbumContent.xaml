<Grid
	x:Class="EPlayer.Contents.AlbumContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="#F444"
	xmlns:controls="clr-namespace:EPlayer.Controls">
	<Grid.RowDefinitions>
		<RowDefinition Height="Auto"/>
		<RowDefinition Height="*"/>
	</Grid.RowDefinitions>
	<Grid.ColumnDefinitions>
		<ColumnDefinition Width="150"/>
		<ColumnDefinition Width="*"/>
	</Grid.ColumnDefinitions>
	<Image x:Name="MainImage" Height="150" />
	<TextBlock x:Name="TitleTextBlock" Grid.Column="1" TextWrapping="Wrap" FontSize="20" VerticalAlignment="Center"/>
	<controls:SongGrid x:Name="MainListBox" Grid.ColumnSpan="2" Grid.Row="1"/>
</Grid>