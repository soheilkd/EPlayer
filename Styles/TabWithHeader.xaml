<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style TargetType="TabItem" x:Key="TabWithHeader">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type TabItem}">
					<Border BorderThickness="0" x:Name="Root" Margin="10,3" BorderBrush="#CCC">
						<TextBlock x:Name="Block" HorizontalAlignment="Center" Foreground="#999" Text="{TemplateBinding Header}"/>
					</Border>
					<ControlTemplate.Triggers>
						<Trigger Property="IsSelected" Value="True">
							<Setter TargetName="Block" Property="Foreground" Value="#FFF"/>
							<Setter TargetName="Block" Property="FontSize" Value="25"/>
							<Setter TargetName="Block" Property="FontWeight" Value="SemiBold"/>
							<Setter TargetName="Root" Property="BorderBrush" Value="#4692EC"/>
							<Setter TargetName="Root" Property="BorderThickness" Value="0,0,0,3"/>
							<Setter Property="Panel.ZIndex" Value="100" />
							<Setter Property="Margin" Value="-4"/>
						</Trigger>
						<Trigger Property="IsSelected" Value="False">
							<Setter Property="FontSize" Value="14"/>
						</Trigger>
						<Trigger SourceName="Root" Property="IsMouseOver" Value="True">
							<Setter TargetName="Root" Property="BorderThickness" Value="0,0,0,3"/>
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>